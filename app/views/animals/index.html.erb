<%= form_tag animals_path, method: :get, class: 'form-search-animals' do %>
  <%= label_tag "RESEARCH..", nil, class: "label-search-animals" %>
  <%= text_field_tag :category,
    params[:category],
    class: "form-control"
  %>
  <%= submit_tag "Search", class: "hidden-button" %>
<% end %>

<div class="container show">
  <p class="btn-out-catalog"><%= link_to "SIGN OUT", destroy_seller_session_path, class: 'inactive-s' %></p>
  <div class="animals-container">
    <% @animals.each do |animal| %>
      <div class="animal-list">
        <div>
          <p>CATEGORY: <%= animal.category %> </p>
          <p>AGE: <%= animal.age %> </p>
          <p>STAGE: <%= animal.stage %> </p>
        </div>
        <div>
          <p>GENDER: <%= animal.gender %> </p>
          <p>HEALTH: <%= animal.health %> </p>
          <p id="price"> <%= number_with_delimiter(animal.price, delimiter: ' ') %> BTC</p>
          <p class="btn-details"><%= link_to "+ VIEW DETAILS", animal_path(animal.id), class: "a-details" %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

