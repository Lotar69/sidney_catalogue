<div class="container show">
  <p class="btn-out-catalog"><%= link_to "SIGN OUT", destroy_seller_session_path, class: 'inactive-s' %></p>
  <div class="animals-container">
    <% @animals.each do |animal| %>
      <div class="animal-list">
        <div>
          <p>CATEGORY: <%= animal.category %> </p>
          <p>AGE: <%= animal.age %> </p>
          <p>STAGE: <%= animal.stage %> </p>
        </div>
        <div>
          <p>GENDER: <%= animal.gender %> </p>
          <p>HEALTH: <%= animal.health %> </p>
          <p><%= animal.price %> $</p>
          <p class="btn-details"><%= link_to "+ VIEW DETAILS", animal_path(animal.id), class: "a-details" %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>