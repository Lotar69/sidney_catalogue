<div class="super">
  <div class="content">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs small">
        <%= f.input :user_name,
                    label: "USER NAME:",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "user_name" }%>
        <%= f.input :password,
                    label: "PASSWORD:",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions log">
        <%= f.button :submit, "ENTER", class: "button" %>
      </div>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
