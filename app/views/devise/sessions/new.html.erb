<div class="content">
<h2 class="lololo">LOG IN</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs small">
      <%= f.input :user_name,
                  label: "USER NAME",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "user_name" }%>
      <%= f.input :password,
                  label: "PASSWORD",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions log">
      <%= f.button :submit, "Log in", class: "button" %>
    </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
