<div class="container dashboard">
  <div class="row dashboard-row">
    <div class="nav col-lg-3">
      <ul>
        <li id="marb"><%= link_to "CREATE NEW SELL", new_animal_path, class: 'un inactive-d' %></li>
        <li class="sells" ><div class="deux inactive-d">ANIMALS FOR SALE</div></li>
        <li class="history"><div class="quatre inactive-d">HISTORY</div></li>
        <li id="mart"><%= link_to "SIGN OUT", destroy_seller_session_path, class: 'cinq inactive-d', method: :delete %></li>
      </ul>
    </div>
    <div class="list col-lg-9">
      <ul>
        <% @animals.each do |animal| %>
          <div class="row card-row" data-sold="<%= animal.buyer_id.present? %>">
            <div class="content-card col-lg-4">
              <h2>CATEGORY : <%= animal.category %></h2>
              <p>GENDER : <%= animal.gender %></p>
              <p>AGE : <%= animal.age %></p>
              <p>HEALTH : <%= animal.health %></p>
              <p>STAGE : <%= animal.stage %></p>
            </div>
            <div class="content-card col-lg-6">
              <p>PRICE : <%= animal.price %></p>
              <p>DESCRIPTION : <%= animal.description %></p>
              <div class="content-img">
                <% if animal.photo.attached? %>
                  <%= cl_image_tag animal.photo.key, class: 'img', crop: :fill %>
                <% end %>
              </div>
            </div>
            <div class="content-card col-lg-2">
              <div class="btn">
                <%= link_to "EDIT",edit_animal_path(animal), class: "link" %>
              </div>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
